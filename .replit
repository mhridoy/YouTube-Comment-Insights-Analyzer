modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Download Kaggle Dataset"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Comment Analysis"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create GitHub Repository"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Upload to GitHub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Info"

[[workflows.workflow]]
name = "Start Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Download Kaggle Dataset"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python download_dataset.py"

[[workflows.workflow]]
name = "Run Comment Analysis"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python comment_analysis.py"

[[workflows.workflow]]
name = "Create GitHub Repository"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_github_repo.py"

[[workflows.workflow]]
name = "Upload to GitHub"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_github_repo.py"

[[workflows.workflow]]
name = "Git Info"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python git_info.py"

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
